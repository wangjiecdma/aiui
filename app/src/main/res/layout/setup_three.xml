<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生产配置-楼层显示(Floor name)"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:padding="20dp"


        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/last_page"
            style="@style/ButtonStyle"

            android:text="上一步(Prev)"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_page"
            style="@style/ButtonStyle"

            android:text="下一步(Next)"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"

            android:id="@+id/linearLayout">


            <com.shbst.kone_home.Views.FontEditView
                android:id="@+id/floor_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:maxLength="2"
                android:text="5" />
            <com.shbst.kone_home.Views.FontEditView
                android:id="@+id/floor_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:maxLength="2"

                android:text="3" />
            <com.shbst.kone_home.Views.FontEditView
                android:id="@+id/floor_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:maxLength="2"

                android:text="2" />
            <com.shbst.kone_home.Views.FontEditView
                android:id="@+id/floor_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:maxLength="2"

                android:text="G" />
            <com.shbst.kone_home.Views.FontEditView
                android:id="@+id/floor_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:text="P"
                android:maxLength="2"

                />




        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
