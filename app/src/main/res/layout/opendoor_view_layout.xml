<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customBallView="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:layout_height="115dp">

    <com.shbst.kone_home.Views.CustomBall
        android:id="@+id/open_door_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        customBallView:ballColor="@color/white"
        customBallView:ballRadius="57dp"
        customBallView:centerText="30%"
        customBallView:centerTextColor="#000000"
        customBallView:centerTextSize="28dp"
        customBallView:progressColor="@color/blue_color" />
    <!--customBallView:ballColor="@color/colorAccent"-->

    <ImageView
        android:id="@+id/opendoor_layout_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/un_round_2"
        android:src="@drawable/w_theme1_open" />
</RelativeLayout>