<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产配置-语言(Language)"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_alignParentLeft="true"
            />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/last_page"
            style="@style/ButtonStyle"

            android:text="上一步(Prev)"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_page"
            style="@style/ButtonStyle"

            android:text="下一步(Next)"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本(Build Time)\n20180627.083316"
            android:textSize="25dp"

            android:textColor="@color/red_kone_color"

            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/version_text"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

             <RadioGroup
                android:id="@+id/language_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:padding="20dp">

            <com.shbst.kone_home.Views.FontRadioButton
                android:id="@+id/language_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/radio_select"
                android:paddingLeft="10dp"
                android:text="英语 (English)"
                android:textColor="#fff"
                android:textSize="20sp" />

            <com.shbst.kone_home.Views.FontRadioButton
                android:id="@+id/language_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:button="@drawable/radio_select"
                android:paddingLeft="10dp"
                android:text="简体中文"
                android:textColor="#fff"
                android:textSize="20sp" />

            <com.shbst.kone_home.Views.FontRadioButton
                android:id="@+id/language_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:button="@drawable/radio_select"
                android:paddingLeft="10dp"
                android:text="繁体中文"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RadioGroup>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
